<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="~/Scripts/jquery-2.2.3.js"></script>


</head>
<body>
    <div>
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="row">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="col-md-3 col-sm-3 col-xs-5">
                            <a href="/" class="logo"><img src="~/Content/Images/logo.png" alt="Hot Touch" /></a>
                        </div>
                        <div class="col-md-9 col-sm-9 col-xs-12 taR">
                            <nav id="navbar" class="navbar-collapse collapse" aria-expanded="false">
                                <ul class="navigation">
                                    <li>@Html.ActionLink("Home", "Index", "Home", new { id = "menuHome" })</li>
                                    <li>@Html.ActionLink("About Us", "About", "Home", new { id = "menuAbout" })</li>
                                    <li>@Html.ActionLink("Menu", "Index", "OrderPage", new { id = "menuMenu" })</li>

                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="menuService">Service<b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Dinning/Buffet", "Index", "OrderPage")</li>
                                            <li>@Html.ActionLink("Party Hall", "Index", "OrderPage")</li>
                                            <li>@Html.ActionLink("Catering", "Index", "OrderPage")</li>
                                        </ul>
                                    </li>
                                    @*<li>@Html.ActionLink("Cart", "area", "OrderOnline", new { id = "menuCart" })</li>*@
                                    <li>@Html.ActionLink("Track your Order", "Index", "OrderPage", new { id = "menuTrack" })</li>
                                    <li>@Html.ActionLink("Reach Us", "Contact", "Home", new { id = "menuContact" })</li>
                                    <!--<li>@Html.Partial("_LoginPartial")</li>-->
                                    <li>@Html.ActionLink("Admin Login", "Index", "Admin")</li>
                                </ul>
                            </nav>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        @RenderSection("banner", required: false)
        <div class="bodyContent">
            <div class="container">
                <div class="row">
                    @RenderSection("featured", required: false)
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-8 col-xs-12">
                    <a href="/">Home</a> | <a href="#">Menu</a> | <a href="/Home/Contact">Contact Us</a> | <a href="/Home/About">About Us</a><br />
                    <span>&copy; @DateTime.Now.Year - Powered By: BRASSY Techonologies (FZE), Sharjah, UAE</span>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">

                </div>
            </div>
        </div>
    </footer>
    <p id="back-top">
        <a href="#top"><span><img src="~/Content/Images/arrow.png" alt="back to top" /></span></a>
    </p>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#back-top').hide();
            $(window).scroll(function () {
                if ($(this).scrollTop() > 10) {
                    $(".navbar-fixed-top").css("box-shadow", "0px 0px 10px rgba(0,0,0,.2)");
                }
                else {
                    $(".navbar-fixed-top").css("box-shadow", "none");
                }
                if ($(this).scrollTop() > 100) {
                    $('#back-top').fadeIn();

                } else {
                    $('#back-top').fadeOut();
                }
            });
            // scroll body to 0px on click
            $('#back-top a').click(function () {
                $('body,html').animate({
                    scrollTop: 0
                }, 800);
                return false;
            });

        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
